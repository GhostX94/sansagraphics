sudo yum localinstall smpeg-0.4.5-2.1.x86_64.rpm 
grep -i freetype yum.*
sudo yum install freetype-devel
grep smpeg ../yum.list 
grep -i pygame ../../yum.list 
sudo yum install pygame pygame-devel
